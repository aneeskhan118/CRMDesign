
@{
    ViewBag.Title = "order";
}

<div class="page-header mt-4 py-0 px-3 col-12 widget">
    <div class="page-title my-3">
        <h3>Order List</h3>
    </div>
</div>

<div class="layout-top-spacing">
    <div class="widget-content widget-content-area mb-4">
        <div class="table-responsive theme-datatable basic-theme-datatable mt-4">
            <table id="order-table" class="table table-hover non-hover">
                <thead>
                    <tr>
                        <th>
                            <label class="new-control new-checkbox checkbox-outline-primary m-auto">
                                <input type="checkbox" class="new-control-input chk-parent select-customers-info" id="customer-all-info">
                                <span class="new-control-indicator"></span>
                                <span style="visibility:hidden;">c</span>
                            </label>
                        </th>
                        <th>Order ID</th>
                        <th>Client Name</th>
                        <th>Order Details</th>
                        <th>Order Date</th>
                        <th>Delivery Date</th>
                        <th>Total Quantity</th>
                        <th>Pending Quantity</th>
                        <th>Order Notes</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < 32; i++)
                    {
                        <tr>
                            <td>
                                <label class="new-control new-checkbox checkbox-outline-primary m-auto">
                                    <input type="checkbox" class="new-control-input chk-parent select-customers-info" id="customer-all-info">
                                    <span class="new-control-indicator"></span>
                                    <span style="visibility:hidden;">c</span>
                                </label>
                            </td>
                            <td>@i</td>
                            <td>Demo User</td>
                            <td>Demo Client</td>
                            <td>01-Aug-2020</td>
                            <td>03-Sept-2020</td>
                            <td>1</td>
                            <td>0</td>
                            <td>Testing Testing</td>
                            <td class="text-center">
                                <div class="dropdown custom-dropdown">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink1">
                                        <a class="dropdown-item" href="javascript:void(0);">Assign</a>
                                        <a class="dropdown-item" href="javascript:void(0);">Products</a>
                                        <a class="dropdown-item" href="javascript:void(0);">Reject List</a>
                                        <a class="dropdown-item" href="javascript:void(0);">Order Summary</a>
                                        <a class="dropdown-item" href="javascript:void(0);">Order Notes</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="stateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="stateModalLabel">Add Splash</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 float-left">
                        <div class="form-group float-left w-100 mb-3">
                            <label for="client">Clients</label>
                            <select class="selectpicker custom-bsSelect w-100" id="client">
                                <option>Select Client</option>
                                <option>Demo</option>
                            </select>
                        </div>
                        <div class="form-group float-left w-100 mb-3">
                            <label for="remarks">Remarks</label>
                            <input type="text" class="form-control" id="remarks" placeholder="Enter Purpose">
                        </div>
                        <div class="form-group float-left w-100 mb-3">
                            <label for="orderDate">Order Date</label>
                            <input type="date" class="form-control" id="orderDate" placeholder="Enter Order Date">
                        </div>
                        <div class="form-group float-left w-100 mb-0 mt-3">
                            <label for="deliveryDate">Delivery Date</label>
                            <input type="date" class="form-control" id="deliveryDate" placeholder="Enter Delivery Date">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-primary saveButton">Save</button>
                <button class="btn" data-dismiss="modal">Discard</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Script/orders.js"></script>
}