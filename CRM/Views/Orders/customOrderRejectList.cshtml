
@{
    ViewBag.Title = "customOrderRejectList";
}

<div class="page-header mt-4 py-0 px-3 col-12 widget">
    <div class="page-title my-3">
        <h3>Customized Order Reject List</h3>
    </div>
</div>

<div class="layout-top-spacing">
    <div class="widget-content widget-content-area mb-4">
        <div class="table-responsive theme-datatable basic-theme-datatable mt-4">
            <table id="customizedOrderReject-table" class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <label class="new-control new-checkbox checkbox-outline-primary m-auto">
                                <input type="checkbox" class="new-control-input chk-parent select-customers-info" id="customer-all-info">
                                <span class="new-control-indicator"></span>
                                <span style="visibility:hidden;">c</span>
                            </label>
                        </th>
                        <th>Client Name</th>
                        <th>Order Date</th>
                        <th>Gross Wt.</th>
                        <th>Melting</th>
                        <th>Size</th>
                        <th>Delivery Date</th>
                        <th>Remarks</th>
                        <th>Notes</th>
                        <th>Images</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < 32; i++)
                    {
                        <tr>
                            <td>
                                <label class="new-control new-checkbox checkbox-outline-primary m-auto">
                                    <input type="checkbox" class="new-control-input chk-parent select-customers-info" id="customer-all-info">
                                    <span class="new-control-indicator"></span>
                                    <span style="visibility:hidden;">c</span>
                                </label>
                            </td>
                            <td>ajinkya</td>
                            <td>01-Aug-2020</td>
                            <td>25.000</td>
                            <td>18</td>
                            <td>NA</td>
                            <td>01-Aug-2020</td>
                            <td>Golden</td>
                            <td>Testing</td>
                            <td>
                                <div class="brandImg">
                                    <img src="~/Content/assets/img/90x90.jpg" />
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-primary shadow-none btn-sm">Approved</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Script/customOrderRejectList.js"></script>
}