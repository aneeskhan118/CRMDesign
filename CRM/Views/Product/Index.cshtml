
@{
    ViewBag.Title = "Product Master";
}

<div class="layout-top-spacing">
    <div class="widget-content widget-content-area mb-4">
        <div class="d-flex align-items-center justify-content-end w-100 productBtn">
            <label for="chooseProduct" class="mb-0 mr-2">Choose Product Feild:</label>
            <select class="selectpicker" id="chooseProduct">
                <option>Select Product Feild</option>
                <option>Melting</option>
                <option>Tone</option>
                <option>Size</option>
                <option>Polish</option>
            </select>
        </div>

        @{
            Html.RenderPartial("_melting");
        }
    </div>
</div>

@section scripts {
    <script src="~/Script/product.js"></script>
}